<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#050A16"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:text="Sensor Detection"
        android:textColor="#9AA2FF"
        android:textSize="24sp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Ultrasonic Proximity Monitor"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtDevices"
        android:text="Fetching paired devices..."
        android:textColor="#B0BEC5"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtDistance"
        android:text="--"
        android:textSize="64sp"
        android:textColor="#FF5252"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtDirection"
        android:text="Direction: --"
        android:textColor="#D0D6E0"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="centimeters"
        android:textColor="#D0D6E0"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtAlert"
        android:text="Waiting for data..."
        android:textSize="18sp"
        android:background="@drawable/alert_box_background"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Proximity Indicator"
        android:textColor="#8C9EFF"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar"
        android:max="150"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:progressDrawable="@drawable/progress_bar_style"
        android:layout_marginBottom="24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/micButton"
        android:src="@drawable/ic_mic"
        android:backgroundTint="#2979FF"
        android:contentDescription="Voice command microphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#0A0F1C"
        app:itemIconTint="@color/nav_selector"
        app:itemTextColor="@color/nav_selector"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
